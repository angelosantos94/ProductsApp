@using ProductsApp.DataAccess.Context;

@{
    ViewData["Title"] = "Home Page";
    var products = ViewData["Products"] as List<Product>;
}

<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/2.0.1/css/dataTables.dataTables.css">
    <script src="https://code.jquery.com/jquery-3.7.1.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://cdn.datatables.net/2.0.1/js/dataTables.js"></script>
    @* <script src="~/js/site.js"></script> *@

</head>
<body>
    <Title>Products</Title>
    <table class="display" style="width:100%">
        <tbody>
            <tr>
                <td>
                    <label for="searchProduct">Search Product </label>

                </td>
                <td>
                    <input type="text" id="searchProduct">
                    <input type="submit" id="searchButton" value="Search">
                </td>
            </tr>
            <tr>
                <td width="10%">
                    <label for="ProductId">Product Id</label>
                </td>
                <td>
                    <input type="text" id="ProductId" readonly>
                </td>
                <td>
                    <label for="ProductName">Product Name</label>
                </td>
                <td>
                    <input type="text" id="ProductName" readonly>
                </td>
            </tr>
            <tr>
                <td width="10%">
                    <label for="Cost">Cost</label>
                </td>
                <td>
                    <input type="text" id="Cost" readonly>
                </td>
                <td>
                    <label for="ProductName">Quantity</label>
                </td>
                <td>
                    <input type="text" id="Quantity">
                </td>
                <td>
                    <input type="submit" id="AddToCart" value="Add to Cart">
                </td>
            </tr>
            <tr>
                <table id="productTable" class="display" style="width:100%">
                    <thead>
                        <tr>
                            <th>Product Id</th>
                            <th>Product Name</th>
                            <th>Cost</th>
                            <th>Quantity</th>
                            <th>Amount</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </tr>
            <tr>
                <td>
                    <label for="totalAmount">Total Amount</label>
                    <input type="text" id="totalAmount" readonly>
                </td>
                <td>
                    <label for="cash">Cash</label>
                    <input type="text" id="cash">
                </td>
                <td>
                    <label for="change">Change</label>
                    <input type="text" id="Change" readonly>
                </td>
                <td>
                    <input type="submit" id="saveTransaction" value="Save">
                </td>
            </tr>
        </tbody>
    </table>

    <div class="modal fade" id="successModal">
        <div class="modal-dialog">
            <div class="modal-content">

                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">Success!</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>

                <!-- Modal Body -->
                <div class="modal-body">
                    <p>API call was successful!</p>
                </div>

                <!-- Modal Footer -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>

            </div>
        </div>
    </div>

</body>
</html>
